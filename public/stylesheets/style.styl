body
  font: 14px "Lucida Grande", Helvetica, Arial, sans-serif
  margin 0
  background-image: url("/images/header-bg.jpg");
a
  color: #00B7FF

video
  width: 50%
  display: inline-block

.animated
  transition: all 0.5s ease

.remote
  position: absolute
  width: 100%

#fullscreen
  transform: translateX(40px)
  &.active
    transform: translateX(0px)


.r-b-corner
  position absolute
  right 20px
  bottom 20px
  z-index 3
  overflow: hidden
  transition: all 0.5s ease
  &.hidden
    #hide-local-preview
      transform: rotate(180deg)
    .options
      bottom 0
    .local
      transform translateY(120%)

  .options
    text-align: right
    padding 5px 0px
    position: absolute
    bottom 0
    width: 100%
    z-index: 2
    a
      font-size 15px
      color white
      display: inline-block
      padding: 10px
      transition: all 0.5s ease

.local
  border 1px solid whitesmoke
  width 250px
  border-radius: 3px
  transition: all 0.5s ease

.options-screen
  position: absolute
  right 20px
  top 20px
  a
    color white
    transform: scale(1,1)
    display: inline-block
    &:hover
      transform: scale(2,2)

.center-portal
  display flex
  align-items: center
  position: absolute
  width: 100%
  height: 100%
  z-index: 1
  .overlay
    background-color: rgba(0,0,0,0.3)
    position: absolute
    width: 100%
    height: 100%
  .in-wrapper
    overflow: hidden
    position: relative
    z-index: 2
    width 300px
    margin: 0 auto
    .mask-portal
      position: absolute
      width: 100%
      height: 115px
      top 8px
      overflow: hidden
      z-index: 1
      &:after
        content "Connecting"
        text-align: center
        width: 100%
        color white
        font-weight: bold
        position: relative
        display: inline-block
        animation: up1 3s infinite
        animation-timing-function cubic-bezier(.17,.67,.86,.31)
    .portal
      height 15px
      border-radius: 50%
      width: 100%
      background-color: black
      &.red
        border 2px solid red
        margin-bottom: 100px
        position relative
        &:after
          content ""
          position: absolute
          width: 100%
          height: 100%
          background-color: red
          border-radius: 50%
          -webkit-filter blur(15px)
          animation light 3s infinite
          animation-fill-mode: both
      &.blue
        border 2px solid blue
        position: relative
        &:after
          content ""
          position: absolute
          width: 100%
          height: 100%
          background-color: blue
          border-radius: 50%
          -webkit-filter blur(15px)
          animation light 2.8s infinite
          animation-fill-mode: both


@keyframes up1
  0%
    top -20px
  100%
    top 110px

@keyframes light
  0%
    opacity: 0.9
  90%
    opacity: 0.1
  100%
    opacity 0.9
